/sitemap.xml
  Content-Type: application/xml

/site.webmanifest
  Content-Type: application/manifest+json; charset=utf-8

/locales/*.json
  Content-Type: application/json; charset=utf-8

/images/*.svg
  Content-Type: image/svg+xml; charset=utf-8

# CSP fuerte solo para HTML
/*
  Content-Security-Policy: default-src 'self'; img-src 'self' data:; script-src 'self'; style-src 'self'; object-src 'none'; frame-ancestors 'self';
  X-Content-Type-Options: nosniff

# Imágenes - sin CSP, sin X-Frame-Options, sin cabeceras obsoletas, caché larga
/images/*
  Content-Security-Policy:
  X-Frame-Options:
  X-Content-Security-Policy:
  X-XSS-Protection:
  X-Content-Type-Options: nosniff
  Expires:
  Cache-Control: public, max-age=31536000, immutable

/images/*/*
  Content-Security-Policy:
  X-Frame-Options:
  X-Content-Security-Policy:
  X-XSS-Protection:
  X-Content-Type-Options: nosniff
  Expires:
  Cache-Control: public, max-age=31536000, immutable

/images/*/*/*
  Content-Security-Policy:
  X-Frame-Options:
  X-Content-Security-Policy:
  X-XSS-Protection:
  X-Content-Type-Options: nosniff
  Expires:
  Cache-Control: public, max-age=31536000, immutable

/images/*/*/*/*
  Content-Security-Policy:
  X-Frame-Options:
  X-Content-Security-Policy:
  X-XSS-Protection:
  X-Content-Type-Options: nosniff
  Expires:
  Cache-Control: public, max-age=31536000, immutable

# Multimedia - sin CSP, sin X-Frame-Options, sin cabeceras obsoletas, caché larga
/multimedia/*
  Content-Security-Policy:
  X-Frame-Options:
  X-Content-Security-Policy:
  X-XSS-Protection:
  X-Content-Type-Options: nosniff
  Expires:
  Cache-Control: public, max-age=31536000, immutable

/multimedia/*/*
  Content-Security-Policy:
  X-Frame-Options:
  X-Content-Security-Policy:
  X-XSS-Protection:
  X-Content-Type-Options: nosniff
  Expires:
  Cache-Control: public, max-age=31536000, immutable
